<div>
  <%= flash[:notice] %>
</div>

<h1>Books</h1>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
  </tr>
  </thead>

  <tbody>
   <% @books. each do |book| %>

  <tr>
   <td><span><%= book.title %></span></td>
   <td><span><%= book.body %></span></td>
   <td><span><%= link_to "Show", "/books/#{book.id}" %></span></td>
   <td><span><%= link_to "Edit", edit_book_path(book.id) %></span></td>
   <td><span><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" =>"Are you sure?" %></span></td>
  </tr>
    <% end %>
  </tbody>


</table>



<h1>New book</h1>

<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book' %></p>
<% end %>
